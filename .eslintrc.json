{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended"
	],
	"settings": {
		"react": {
			"pragma": "React",
			"fragment": "Fragment",
			"version": "detect"
		}
	},
	"ignorePatterns": ["**/*.js"],
	"rules": {
		"no-mixed-operators": 0,
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
	}
}